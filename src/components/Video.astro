---
// Bande-annonce — show teaser video in Place des Arts style
const videoId = "qFkLbrVm_GM";
---

<section class="py-16 border-t border-[var(--color-border)] bg-[var(--color-cream)]">
  <div class="wrap">

    <p class="text-xs font-bold uppercase tracking-widest text-[var(--color-orange)] mb-6">Bande-annonce</p>

    <!-- 16:9 video container — rounded corners, no border, clean -->
    <div class="rounded-2xl overflow-hidden shadow-none"
         style="position: relative; padding-top: 56.25%;">
      <iframe
        src={`https://www.youtube.com/embed/${videoId}?rel=0&modestbranding=1`}
        title="Pouet! — bande-annonce"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
      ></iframe>
    </div>

  </div>
</section>
